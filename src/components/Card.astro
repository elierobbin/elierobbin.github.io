---
const {url, coverImage, title, tag, pubDate} = Astro.props;
---

<a href={url}>
  <section
    class="card poppins flex flex-col px-3 py-4 gap-4 rounded-xl"
  >
    <img
      src={coverImage}
      class="w-full aspect-video object-cover rounded-lg"
      alt="cover du projet"
    />
    <section class="flex flex-col gap-4">
      <section class="flex justify-between">
        <h1 class="">{title}</h1>
        <p class="font-extralight">{pubDate}</p>
      </section>
      <span class="category text-[14px]">{tag}</span>
    </section>
  </section>
</a>
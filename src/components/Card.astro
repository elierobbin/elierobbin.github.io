---
const { image, title, description, url } = Astro.props;
---

<a href={url} class="group">
  <section
    class="flex flex-col gap-4 md:flex-row justify-between w-full md:w-[100%] py-16 border-b border-black"
  >
    <img
      src={image}
      class="w-full md:w-96 aspect-video object-cover transition-all duration-300 ease-in-out group-hover:rounded-xl"
      alt="cover du projet"
    />
    <div class="flex flex-col md:flex-row md:pl-8 w-full gap-10 justify-between">
      <h1 class="text-2xl">{title}</h1>
      <p class="font-sans text-black font-light text-lg">{description}</p>
    </div>
  </section>
</a>

---
const { coverImage, title, description, url } = Astro.props;
---

<a href={url}>
  <section
    class="flex flex-col gap-4 md:flex-row justify-between w-full md:w-[100%] py-8 papier relative px-8"
    
  >
    <img
      src={coverImage}
      class="w-full md:w-96 aspect-video object-cover transition-all duration-300 ease-in-out"
      alt="cover du projet"
    />
    <div class="flex flex-col md:flex-row md:pl-8 w-full gap-4 md:gap-10 justify-between">
      <h1 class="text-2xl md:w-1/3">{title}</h1>
      <p class="font-sans text-black font-light text-lg md:w-2/3">{description}</p>
    </div>
  </section>
</a>

<style>

  .papier::after{
    content: "";
    position: absolute;
    top: 0px;
    left: 0;
    width: 5%;
    height: 20%;
    border-top: 1px solid black;
    border-left: 1px solid black;
    transition: width 0.5s, height 0.5s;
  }

  .papier:hover::after{
    width: 100%;
    height: 100%;
    transition: width 0.5s, height 0.5s;
  }

  .papier::before{
    content: "";
    position: absolute;
    bottom: 0%;
    right: 0;
    width: 5%;
    height: 20%;
    border-bottom: 1px solid black;
    border-right: 1px solid black;
    transition: width 0.5s, height 0.5s;
  }

  .papier:hover::before{
    width: 100%;
    height: 100%;
    transition: width 0.5s, height 0.5s;
  }
</style>

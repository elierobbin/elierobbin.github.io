<form class="flex flex-col gap-6">
    <h1 class="anim text-6xl text-gray-700">
        
    </h1>
    <section class="flex flex-col sm:flex sm:flex-row gap-6">

      <div class="flex flex-col gap-3 sm:gap-4 sm:flex w-full sm:w-1/2">
        <div>
          <label for="name" class="block mb-1 text-sm font-medium text-gray-700">Nom</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Votre nom"
            class="w-full p-3 border rounded-md focus:outline-none"
            required
          />
        </div>
        <div>
          <label for="email" class="block mb-1 text-sm font-medium text-gray-700">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Votre email"
            class="w-full p-3 border rounded-md focus:outline-none"
            required
          />
        </div>
      </div>
  
      <div class="flex flex-col flex-1">
        <label for="message" class="block mb-1 text-sm font-medium text-gray-700">Message</label>
        <textarea
          id="message"
          name="message"
          placeholder="Votre message"
          class="flex-1 p-3 border rounded-md focus:outline-none resize-none"
          required
        ></textarea>
      </div>
    </section>
  

    <button
      type="submit"
      class="px-12 py-2 bg-gray-700 text-white rounded-md hover:bg-gray-900 transition-all duration-300 ease-in-out"
    >
      Envoyer mon message
    </button>
  </form>
  